{
  "name": "email-inbox-app",
  "version": "1.0.0",
  "description": "Personal email inbox app on Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:api",
    "dev:api": "wrangler dev --config wrangler.toml",
    "dev:email": "wrangler dev --config wrangler-email.toml --port 8788",
    "dev:web": "cd web && npm run dev",
    "deploy": "npm run deploy:api && npm run deploy:email",
    "deploy:api": "wrangler deploy --config wrangler.toml",
    "deploy:email": "wrangler deploy --config wrangler-email.toml",
    "deploy:production": "npm run deploy:api -- --env production && npm run deploy:email -- --env production",
    "deploy:pages": "cd web && npm run build && cd .. && wrangler pages deploy web/dist --project-name mail-app",
    "db:create": "wrangler d1 create maildb",
    "db:create:dev": "wrangler d1 create maildb-dev",
    "db:migrate": "wrangler d1 migrations apply maildb",
    "db:migrate:dev": "wrangler d1 migrations apply maildb-dev --local",
    "db:migrate:remote": "wrangler d1 migrations apply maildb --remote",
    "r2:create": "wrangler r2 bucket create mailstore",
    "r2:create:dev": "wrangler r2 bucket create mailstore-dev",
    "queue:create": "wrangler queues create mail-events",
    "pages:create": "wrangler pages project create mail-app",
    "tail": "wrangler tail",
    "tail:email": "wrangler tail --config wrangler-email.toml",
    "lint": "eslint workers",
    "lint:debug": "eslint workers > lint_output.txt 2>&1",
    "test:workers": "vitest run",
    "test:workers:watch": "vitest"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "email",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@cloudflare/vitest-pool-workers": "^0.7.1",
    "eslint": "^8.57.0",
    "vitest": "~3.2.0",
    "wrangler": "^4.59.2"
  },
  "dependencies": {
    "@sentry/cloudflare": "^10.35.0",
    "postal-mime": "^2.7.3"
  }
}
